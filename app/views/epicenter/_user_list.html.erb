<div class="row">
	<% @users.each do |user| %>
		<div class="col-md-3">
			<div class="media">
				<div class="row">
					<div class="col-xs-6">
			    	<% unless user.avatar.url == nil %>
			    		<%= image_tag user.avatar.url, class: "img-circle img-responsive" %>
			    	<% end %>
			    </div>
			    <div class="col-xs-6">
			    	<% if current_user.following.include?(user.id) %>
							<%= link_to "Following", unfollow_path(id: user.id), class: "btn btn-primary unfollow_btn" %>
						<% else %>
							<% if current_user.id != user.id %>
								<%= link_to "Follow", now_following_path(id: user.id), class: "btn btn-primary" %>
							<% end %>
						<% end %>
			    </div>
	    	</div>

	    	<%= link_to show_user_path(id: user.id) do %>
	    		<h4><%= user.name %></h4>
	      	<h5>@<%= user.username %></h5>
	      <% end %>
	      <p><%= user.bio %></p>
    	</div>
		</div>
	<% end %>
</div>